<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    card_view:contentPadding="@dimen/card_padding"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp">

    <ImageView
        android:id="@+id/search_show_image"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:contentDescription="@string/show_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp">

        <TextView
            android:id="@+id/search_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            tools:text="Show Title"/>

        <TextView
            android:id="@+id/search_show_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            tools:text="Lorem ipsum dolor sit amet, te eum amet dolorum docendi, graece voluptaria eu mel. Cum movet doctus eu. Sed no unum autem, et sea facer placerat prodesset. Te duis error offendit ius, aeque mundi ornatus sea ea. His sanctus mediocritatem id. Id inani corrumpit sed."/>

    </LinearLayout>

</android.support.v7.widget.CardView>
